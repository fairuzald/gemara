---
import { Button } from '@/components/ui/button';
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
export const prerender = true;
---

<Layout title='Page Not Found' description='404 Page '>
  <main
    class='relative flex h-screen overflow-hidden w-full bg-brown-lite flex-col items-center justify-center px-10'
  >
    {/*Background*/}
    <Image
      src={'/images/404-shake.png'}
      alt='Sandbox Logo'
      class='absolute top-1/3 inset-0 left-1/2 -translate-x-1/2 -translate-y-1/2 animate-pulse origin-center w-[308px] sm:w-[550px] md:w-[70%] 2xl:w-[50%] aspect-video object-contain transition-all duration-300'
      sizes='(max-width: 640px) 408px, (max-width: 768px) 550px, (max-width: 1024px) 70%, 50%'
      width={1315}
      height={887}
      quality={'low'}
      format='webp'
    />

    {/*Content*/}
    <div
      class='relative bg-scroll justify-items-center w-fit h-fit flex flex-col items-center'
    >
      <Image
        src={'/images/404.png'}
        alt='404 Image'
        class='z-50 object-contain animate-shake w-[124px] sm:w-[150px] lg:w-[182px] h-auto transition-all duration-300'
        width={165}
        height={220}
        quality={'low'}
        format='webp'
      />
      <div class='flex flex-col items-center gap-3 lg:gap-6'>
        <h1
          class='font-tangosans italic animate-ghost-left lg:text-5xl text-4xl tracking-wide text-center font-extrabold text-black transition-all duration-300'
        >
          Oops!
        </h1>
        <h2
          class='font-tangosans italic text-lg lg:text-2xl text-center text-black transition-all duration-300 font-medium'
        >
          Looks like you&apos;ve taken a wrong turn. Let&apos;s get you back on
          track
        </h2>
        <div class='mt-2 lg:mt-4'>
          <Button>
            <a class='text-lg font-bold' href='/'>Go Home</a>
          </Button>
        </div>
      </div>
    </div>
  </main>
</Layout>

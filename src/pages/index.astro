---
import Card from '@/components/Card.astro';
import ImageCarousel from '@/components/ImageCarousel';
import { carouselImages } from '@/data/carousel-image';
import { collectionData } from '@/data/collection-data';
import { Image } from 'astro:assets';
import SiteLayout from '../layouts/SiteLayout.astro';
export const prerender = true;
---

<SiteLayout
  urlSite='https://gemara.site'
  title='Gemara'
  description='Dive deep into the world of nostalgia with our exclusive range of accessories, each thoughtfully designed with beads that tell a story. At Gemara, we believe that every bead carries an essence of the past, a whisper of stories long told, and a touch of moments cherished. Our collections are more than just adornments; they are tangible memories, capturing the spirit of yesteryears, and blending them with modern design aesthetics.'
>
  <main
    class='text-primary-text text-base overflow-x-hidden bg-primary-bg w-full min-h-full'
  >
    <!-- Big background section -->
    <section class='relative h-screen'>
      <ImageCarousel
        client:idle
        autoPlayInterval={4000}
        images={carouselImages}
      />
      <!-- Floating text -->
      <div
        class='flex flex-col items-center justify-center gap-10 absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 z-10'
      >
        <h1
          class='font-black text-center text-3xl lg:text-5xl text-white font-tango-sans tracking-[30px]'
          data-cy='hero-title'
        >
          gemara
        </h1>
      </div>
    </section>

    <!-- About page -->
    <section
      class='p-10 md:p-16 text-primary-text bg-light-bg w-full flex flex-col gap-y-10 items-center justify-center'
      id='about-us'
      transition:name='#about-us'
    >
      <h2
        class='text-2xl lg:text-[35px] font-bold max-lg:mt-5 font-tango-sans max-lg:text-center tracking-[6px]'
        data-cy='about-us-title'
      >
        about us
      </h2>
      <!-- Content -->
      <div
        class='flex flex-col lg:flex-row items-center justify-center gap-x-20 2xl:gap-x-56 flex-1 gap-y-6 w-full'
      >
        <Image
          src={'/logo.svg'}
          width='250'
          height='250'
          alt='Background Image'
          class='object-cover object-center -mt-2 lg:mt-0 w-full max-w-[250px] lg:max-w-[350px] flex-1'
          data-cy='about-us-image'
          format='webp'
          sizes={'(max-width: 1024px) 100%, 500px'}
        />
        <p
          class='max-w-[550px] flex-1 text-base lg:text-lg lg:leading-8 font-medium font-helvetica'
          data-cy='about-us-description'
        >
          <span class='text-[#3B4A24]'> Gemara,</span>
          derived from the combination of the words “<span
            class='text-[#2F5D92]'
          >
            gem</span
          >
          ” meaning gemstone, and "
          <span class='text-[#923A4A]'> gemar</span>

          " meaning hobby, is an accessories company that specializes in
          ethnically crafted jewelry using indigenous stones from Indonesia.
          Gemara company was established to fulfill the requirements for
          completing the Integrated Business Experience course. Established on
          August 23rd 2023, supervised by the School of Business Management,
          Bandung Institute of Technology.
        </p>
      </div>
    </section>

    <!-- Collection -->
    <section
      class='px-12 py-20 lg:px-16 lg:py-24 bg-brown-lite w-full flex flex-col gap-y-24 items-center justify-center'
      id='collection'
      transition:name='#collection'
    >
      <h2
        class='text-xl lg:text-3xl max-lg:text-center text-gray-900 flex flex-col text-center gap-2 lg:gap-4 font-tango-sans'
        data-cy='collection-title'
      >
        Collection
        <ul
          data-cy='collection-list'
          class='flex flex-col gap-10 items-center justify-center max-w-7xl mt-6 lg:mt-12'
        >
          {
            collectionData.map((item) => {
              return (
                <Card
                  image={item.image}
                  title={item.title}
                  description={item.description}
                  backgroundColor={item.backgroundColor}
                />
              );
            })
          }
        </ul>
      </h2>
    </section>
  </main>
</SiteLayout>

<style is:global>
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
      scroll-padding-top: 5vmax;
    }
  }
</style>

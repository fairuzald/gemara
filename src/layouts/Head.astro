---
import { SEO } from 'astro-seo';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  urlSite?: string;
  noIndex?: boolean;
}
const {
  title = 'Gemara',
  description = 'A beads customization website',
  image = '/logo.jpg',
  urlSite = 'https://gemara.site',
  noIndex = false,
} = Astro.props;
---

<head>
  <!-- Google tag (gtag.js) -->
  <script
    type='text/partytown'
    async
    src='https://www.googletagmanager.com/gtag/js?id=G-NYC2SW38DG'></script>
  <script type='text/partytown'>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'G-NYC2SW38DG');
  </script>
  <!-- Hotjar Tracking Code for my site -->
  <script type='text/partytown'>
    (function (h, o, t, j, a, r) {
      h.hj =
        h.hj ||
        function () {
          (h.hj.q = h.hj.q || []).push(arguments);
        };
      h._hjSettings = { hjid: 3816136, hjsv: 6 };
      a = o.getElementsByTagName('head')[0];
      r = o.createElement('script');
      r.async = 1;
      r.src = t + h._hjSettings.hjid + j + h._hjSettings.hjsv;
      a.appendChild(r);
    })(window, document, 'https://static.hotjar.com/c/hotjar-', '.js?sv=');
  </script>

  <meta charset='UTF-8' />
  <link rel='sitemap' href='/sitemap-index.xml' />
  <meta name='generator' content={Astro.generator} />
  <link rel='manifest' href='/manifest.webmanifest' />
  <SEO
    title={title}
    titleDefault='Gemara'
    description={description}
    canonical={urlSite}
    noindex={noIndex}
    nofollow={noIndex}
    openGraph={{
      basic: {
        title: `${title}`,
        type: 'website.',
        image: `${image}`,
      },
      image: {
        url: `${image}`,
        width: 800,
        height: 600,
        alt: "Gemara's Logo",
      },
    }}
    twitter={{
      creator: '@gemara',
      title: `${title}`,
      description: `${description}`,
      image: `${image}`,
      imageAlt: "Gemara's Logo",
    }}
    extend={{
      link: [{ rel: 'icon', href: image }],
      meta: [
        {
          name: 'twitter:image',
          content: `${image}`,
        },
        { name: 'twitter:title', content: `${title}` },
        { name: 'twitter:description', content: `${description}` },
        {
          name: 'keywords',
          content:
            'gemara, beads, custom, customization, website, store, shop, buy, sell, purchase',
        },
        {
          name: 'application-name',
          content: `${title}`,
        },

        { name: 'referrer', content: 'origin-when-cross-origin' },
        { name: 'theme-color', content: '#000000' },
        { name: 'color-scheme', content: 'normal' },
        { name: 'category', content: 'Store' },
        { name: 'viewport', content: 'width=device-width, initial-scale=1' },
      ],
    }}
  />
</head>
<slot />

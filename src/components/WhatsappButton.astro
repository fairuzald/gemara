---
import { Button } from '@/components/ui/button';
import { Image } from 'astro:assets';
---

<Button
  size={'icon'}
  className='rounded-full bg-white shadow-lg drop-shadow-lg '
  variant={'ghost'}
  asChild
>
  <a
    href='https://wa.me/62895417115666'
    target='_blank'
    class='fixed bottom-14 right-14 z-40'
    aria-label='Whatsapp Icon'
    ><Image
      alt='whatsapp'
      width={100}
      height={100}
      src={'/icons/whatsapp.svg'}
      format='avif'
      class='aspect-square w-14 bg-green-500 p-3 rounded-full hover:bg-[#41ad62] transition-all duration-300 ease-in-out'
    />
  </a>
</Button>
